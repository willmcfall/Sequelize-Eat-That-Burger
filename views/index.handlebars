<div class="container">

  <div class="row">
    <div class="col col-lg-1">
    </div>
    <div class="col col-lg-10">

      <h1 class="text-center">Eat the Burger!</h1>
      <div class="text-center">
        <img src="./assets/img/burger.png" style="width:30%">
      </div>

      <h2>
        Un-Devoured Burgers
      </h2>
      <ul>
        {{#each burger}}
        {{#unless devoured}}
        {{> burgers/burger-block}}
        {{/unless}}
        {{/each}}
      </ul>
      <br>
      <h2>
        Devoured Burgers
      </h2>
      <ul>
        {{#each burger}}
        {{#if devoured}}
        {{> burgers/burger-block}}
        {{/if}}
        {{/each}}
      </ul>
      <br>
      <hr>
      <form class="create-form">
        <div class="form-group">
          <h2>
            Add Burger:
          </h2>
          <input type="text" id="create-burger" name="burger_name">
        </div>
        <button type="submit" id="submit"> <i class="fas fa-hamburger"></i> Add Burger </button>
      </form>

    </div>
    <div class="col col-lg-1">
    </div>
  </div>

</div>
